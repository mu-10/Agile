{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // required for "paths" to work
    "moduleResolution": "Bundler", // RN/Expo-friendly resolver
    "moduleSuffixes": [".web", ".native", ""], // pick Map.web.tsx / Map.native.tsx
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
